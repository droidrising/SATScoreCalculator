<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/perfectbackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wordpress.httpsdroidrisinglabs.satscorecalculator.SATScreen">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_marginStart="39dp"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Reading Right: "
        android:textColor="@color/white"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="33dp"

        android:fontFamily="sans-serif-condensed"
        android:text="Writing Right: "
        android:textColor="@color/white"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="27dp"

        android:fontFamily="sans-serif-condensed"
        android:text="Math Right: "
        android:textColor="@color/white"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/readingWrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:fontFamily="sans-serif-condensed"
        android:textSize="27dp"
        android:inputType="number"

        android:hint="0-52"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginStart="34dp"
        android:imeOptions="actionDone"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:fontFamily="sans-serif-condensed"
        android:textSize="27dp"
        android:hint="0-44"
        android:inputType="number"

        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/readingWrong"
        android:id="@+id/writingwrong"
        android:imeOptions="actionDone"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:fontFamily="sans-serif-condensed"
        android:textSize="27dp"
        android:hint="0-58"
        android:layout_alignBaseline="@+id/textView4"
        android:inputType="number"

        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/writingwrong"
        android:id="@+id/mathscore"
        android:imeOptions="actionDone"
        />

    <Button
        android:id="@+id/calc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mathscore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@color/white"
        android:fontFamily="sans-serif-condensed"
        android:text="Calculate!"
        android:textSize="15dp"

        />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/calc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Score: "
        android:textColor="@color/white"
        android:textSize="40dp" />


</RelativeLayout>
