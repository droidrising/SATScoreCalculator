<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/perfectbackground"
    android:layout_height="match_parent"
    tools:context="com.wordpress.httpsdroidrisinglabs.satscorecalculator.MainActivity">

    <TextView
        android:layout_width="350dp"
        android:layout_height="61dp"
        android:fontFamily="sans-serif-condensed"
        android:text="We are not affiliated, associated, authorized, endorsed by, or in any way officially connected with CollegeBoard "
        android:textColor="@color/white"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.968"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Welcome to my \nSAT Score Calculator!\nSelect your test."
        android:textColor="@color/white"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.922"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.155" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="208dp"
        android:layout_height="149dp"
        app:srcCompat="@drawable/satlogo"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/sat"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/rounded_button"
        android:text="SAT I"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/chem"
        android:layout_width="127dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/rounded_two"
        android:text="Chemistry"
        app:layout_constraintBottom_toTopOf="@+id/physicsButton"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/physicsButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/rounded_two"
        android:text="Physics"
        app:layout_constraintBottom_toTopOf="@+id/lit"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/chem"
        app:layout_constraintRight_toRightOf="@+id/chem"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/lit"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_two"
        android:text="Literature"

        app:layout_constraintBottom_toBottomOf="@+id/wh"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/physicsButton"
        app:layout_constraintRight_toRightOf="@+id/physicsButton"
        app:layout_constraintTop_toTopOf="@+id/wh"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/math1"
        android:layout_width="127dp"

        android:layout_height="48dp"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/rounded_two"
        android:text="Math I"
        app:layout_constraintBottom_toTopOf="@+id/math2"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/math2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/rounded_two"

        android:text="Math II"
        app:layout_constraintBottom_toTopOf="@+id/ush"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/math1"
        app:layout_constraintRight_toRightOf="@+id/math1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/ush"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="13dp"

        android:background="@drawable/rounded_two"
        android:text="US History"
        app:layout_constraintBottom_toTopOf="@+id/wh"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/math2"
        app:layout_constraintRight_toRightOf="@+id/math2"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/wh"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="110dp"
        android:background="@drawable/rounded_two"
        android:text="World History"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/ush"
        app:layout_constraintRight_toRightOf="@+id/ush"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/bio"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/rounded_two"
        android:text="Bio E/M"
        app:layout_constraintBottom_toTopOf="@+id/chem"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintLeft_toLeftOf="@+id/chem"
        app:layout_constraintRight_toRightOf="@+id/chem"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

</android.support.constraint.ConstraintLayout>
